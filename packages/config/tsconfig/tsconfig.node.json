{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleDetection": "force",

    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",

    "types": ["node"],
    "noEmit": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
