{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@config/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": "./",
    "paths": {
      "#/*": ["./src/*"]
    },

    "types": ["@core/types/global"]
  },
  "files": ["uno.config.ts"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "types/*"]
}
